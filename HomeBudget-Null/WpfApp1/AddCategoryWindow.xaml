<Window x:Class="WpfApp1.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Category" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Category Name:"/>
        <TextBox x:Name="categoryNameTextBox" Grid.Column="1"/>

        <Label Content="Category Type:" Grid.Row="1"/>
        <ComboBox x:Name="categoryTypeComboBox" Grid.Row="1" Grid.Column="1">
            <ComboBoxItem Content="Income"/>
            <ComboBoxItem Content="Expense"/>
            <ComboBoxItem Content="Credit"/>
            <ComboBoxItem Content="Savings"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
            <Button x:Name="confirmButton" Content="Confirm" Click="confirmButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" Click="cancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>