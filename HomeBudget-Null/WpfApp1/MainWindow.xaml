<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Add Expense" Height="385" Width="500" ResizeMode="NoResize">
    <StackPanel>
        <Label x:Name="MenuBarMargin" Visibility="Collapsed">2</Label>
        <Grid x:Name="MenuBar" HorizontalAlignment="Left" VerticalAlignment="Center" Height="27.5" Width="500" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Theme" Grid.Column="0" Grid.Row="0"/>
        </Grid>
        
        <GroupBox Header="Main Details" Margin="10,20,10,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="GeneralMargin" Visibility="Hidden">
                    2
                </TextBlock>
                

                <Label Content="Expense Name:" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>
                <TextBox x:Name="nameTextBox" Grid.Column="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Label Content="Amount:" Grid.Row="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>
                <TextBox x:Name="amountTextBox" TextChanged="amountTextBox_TextChanged"  Grid.Row="1" Grid.Column="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Label Content="Date:" Grid.Row="2" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>
                <DatePicker x:Name="dateDatePicker" Grid.Row="2" Grid.Column="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Label Content="Category:" Grid.Row="3" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="{Binding ElementName=GeneralMargin,Path=Text}">
                    <ComboBox x:Name="categoryComboBox" Width="150">
                        <ComboBoxItem Content="Rent"/>
                        <ComboBoxItem Content="Groceries"/>
                        <ComboBoxItem Content="Transportation"/>
                        <ComboBoxItem Content="Utilties"/>
                    </ComboBox>
                    <Label x:Name="selectedCategoryLabel" Margin="5,0"/>
                    <Button x:Name="addCategoryButton" Content="Add Category" Click="addCategoryButton_Click" Margin="{Binding ElementName=GeneralMargin,Path=Text}" HorizontalAlignment="Right"/>
                </StackPanel>

                <!--<Label Content="Description" Grid.Row="4" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>
                <TextBox x:Name="descriptionTextBox" Grid.Row="4" Grid.Column="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>-->

                <Button x:Name="cancelButton" Content="Cancel" Grid.Row="6" Click="cancelButton_Click" Grid.Column="0" Margin="{Binding ElementName=GeneralMargin,Path=Text}" VerticalAlignment="Center"/>
                <Button x:Name="addButton" Content="Add" Grid.Row="5" Grid.Column="1" Click="addButton_Click" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Label x:Name="budgetLabel" Content="Budget: $0.00" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Right"/>

                <Button Content="Choose File" Name="chooseFileButton" Click="chooseFile_Click" Grid.Row="5" Grid.Column="0" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Label x:Name="selectedFileLabel" Content="Selected File: " Grid.Row="6" Grid.Column="1" Margin="{Binding ElementName=GeneralMargin,Path=Text}"/>

                <Button x:Name="closeButton" Content="Close" Click="closeFile_Click" Grid.Column="1" Margin="94,88,185,-88" Grid.Row="5"/>
            </Grid>
        </GroupBox>

    </StackPanel>
</Window>